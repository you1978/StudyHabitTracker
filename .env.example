# Database Configuration
DB_TYPE=supabase
DATABASE_URL=postgresql://postgres.your-project-id:your-password@aws-0-ap-northeast-1.pooler.supabase.com:5432/postgres

# Application Configuration
NODE_ENV=development
PORT=5000

# Session Configuration (IMPORTANT: Change this in production!)
SESSION_SECRET=your-secure-session-secret-here-change-this-in-production

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Cookie Configuration (for production)
# COOKIE_DOMAIN=.your-domain.com

# AWS/Production specific settings
# NODE_ENV=production
# ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# HTTP環境でのCookie設定（HTTPSでない場合）
# DISABLE_SECURE_COOKIE=true

# HTTPS強制設定（HTTPSを使用する場合）
# FORCE_HTTPS=true